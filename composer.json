        "symfony/filesystem": "~2.5",
        "symfony/yaml": "~2.5"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1"
    },
    "minimum-stability": "stable",

    "config": {
        "bin-dir": "bin"
