{
    "name": "albumgrab/cli",
    "description": "Crawl photo albums and download images",
    "license": "MIT",
    "authors": [
        {
            "name": "Adam Elsodaney",
            "email": "adam.elso@gmail.com"
        }
    ],

    "require": {
        "php": ">=7.0",

        "ext-v8js": "*",

        "blackfire/player": "@alpha",

        "symfony/config": "^3.0",
        "symfony/console": "^3.0",
        "symfony/dependency-injection": "^3.0",
        "symfony/event-dispatcher": "^3.0",
        "symfony/filesystem": "^3.0",
        "symfony/var-dumper": "^3.0",
        "symfony/yaml": "^3.0"
    },
    "require-dev": {
        "behat/behat": "@dev",
        "bossa/phpspec2-expect": "*",
        "phpspec/phpspec": "~2.4",
        "symfony/process": "^3.0"
    },
    "minimum-stability": "stable",

    "config": {
        "bin-dir": "bin"
    },

    "bin": [ "bin/albumgrab" ],

    "autoload": {
        "psr-4": {
            "Albumgrab\\": "src/"
        }
    }
}
